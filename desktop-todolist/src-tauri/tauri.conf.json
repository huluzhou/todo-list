{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "desktop-todolist",
  "version": "0.1.0",
  "identifier": "com.zhouzhang.desktop-todolist",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "待办",
        "decorations": false,
        "transparent": true,
        "resizable": false,
        "width": 320,
        "height": 400
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
